-- 5.1 Exact Match---- This simple query is mainly used to establish a simple performance-- primitive unit to help establish a 'metric' to interpret subsequent-- queries. It tests the database ability to handle simple string lookups-- with a fully specified path.---- Q1. Return the name of the item with ID ‘item20748’ registered in North-- America.---- FOR $b IN--    document("auction.xml")/site/regions/namerica/item[@id="item20748"]-- RETURN $b/name/text() -- Relevant subgraph:----      site  regions  namerica  item   id--        |      |        |       |      |--       \|/    \|/      \|/     \|/    \|/-- x0 --> x1 --> x2 ----> x3 ---> x4 --> x5 --> item20748--                                |--                               \|/--                       name --> x6 --> x7 --> x8--                                      /|\--                                       |--                                    content+-- Calculus expressions:---- x0 = document-- x1 = T(x0) ^ T(site)-- x2 = T(x1) ^ T(regions)-- x3 = T(x2) ^ T(namerica)-- x4 = T(x3) ^ T(item) ^ S(x5)-- x5 = T(id) ^ S(item20748)-- x6 = T(x4) ^ T(name)-- x7 = T(x6) ^ T(content+)-- x8 = T(x7)with Ada.Command_Line;with Ada.Text_IO;procedure Mneson.XMark.Q1 is   use Ada.Command_Line;   use Ada.Text_IO;   use Base;   use Calc;   X : array (0 .. 8) of Selection;   function SinStr (S : String) return Selection is   begin return Singleton (To_Vertex (S));   end;begin   Open (Argument (1));   X (0) := Singleton (Val (Argument (2)));   X (1) := Targets (X (0)) ** Targets (SinStr ("site"));   X (2) := Targets (X (1)) ** Targets (SinStr ("regions"));   X (3) := Targets (X (2)) ** Targets (SinStr ("namerica"));   X (5) := Targets (SinStr ("id")) ** Sources (SinStr ("item11")); -- 20748   X (4) := Targets (X (3)) ** (Targets (SinStr ("item")) ** Sources (X (5)));   X (6) := Targets (X (4)) ** Targets (SinStr ("name"));   X (7) := Targets (X (6)) ** Targets (SinStr ("content+"));   X (8) := Targets (X (7));   Put_Line (Img (Extract (X (8))));   Close;end;